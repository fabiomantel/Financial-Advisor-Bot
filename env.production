# Production Environment Configuration
NODE_ENV=production
PORT=3000

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Twilio Configuration
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_WHATSAPP_NUMBER=whatsapp:+14044496711

# Redis Configuration (Production - Use secure connection)
REDIS_URL=${REDIS_URL}
STORAGE_TYPE=redis

# Redis TLS Configuration (for secure connections)
REDIS_TLS_CA=${REDIS_TLS_CA}
REDIS_TLS_CERT=${REDIS_TLS_CERT}
REDIS_TLS_KEY=${REDIS_TLS_KEY}
REDIS_TLS_REJECT_UNAUTHORIZED=${REDIS_TLS_REJECT_UNAUTHORIZED:-true}

# Logging
LOG_LEVEL=info 